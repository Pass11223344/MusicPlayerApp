<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Wangyiyun" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:windowBackground">@color/red</item>
        <item name="background">@null</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:background">@null</item>
        <item name="android:windowTranslucentStatus">false</item>

        <item name="android:windowTranslucentNavigation">true</item>

        <item name="android:windowDisablePreview">false</item>
    </style>

    <style name="MyBottomNavigationTheme">
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
    </style>

    <style name="MyBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="itemIconSize">20dp</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_selector</item>
    </style>


</resources>